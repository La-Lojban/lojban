{
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": [
      "esnext",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "es7",
      "es6",
      "es5",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["src/@types/*"]
    }
  },
  "include": ["./src/", "./src/@types/**/*", "libs/ilmentufa"]
}
